<div class="sidebar border border-right col-md-3 col-lg-2 p-0 bg-body-tertiary">
  <div class="offcanvas-md offcanvas-end bg-body-tertiary" tabindex="-1" id="sidebarMenu" aria-labelledby="sidebarMenuLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="sidebarMenuLabel">Company name</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body d-md-flex flex-column p-0 pt-lg-3 overflow-y-auto">
      <ul class="nav flex-column">
        <li class="nav-item">
          <a href="#" class="nav-link">
            <div class="d-flex align-items-center gap-0">
              <%= link_to admin_users_path, class: "nav-link #{active_if('admin/users')}" do %>
                <svg class="bi" width="16" height="16"><use xlink:href="#people"/></svg>
                <%= t('admin.users.index.title') %>
              <% end %>      
            </div>
          </a>
        </li>

      <hr class="my-3">

      <ul class="nav flex-column mb-auto">
        <li class="nav-item">
          <a href="#" class="nav-link">
            <div class="d-flex align-items-center gap-0">
              <svg class="bi" width="16" height="16"><use xlink:href="#door-closed"/></svg>
              <%= link_to t('defaults.logout'), admin_logout_path, class: 'nav-link', data: { turbo_method: :delete } %>
            </div>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>