<% content_for(:title, t('.title')) %>
<div class="container d-flex flex-wrap justify-content-center justify-content-center pt-5">
  <div class="w-100 align-self-end pt-1 pt-md-4 pb-4" style="max-width: 526px;">
    <h1 class="text-center text-xl-start"><%= t '.title' %></h1>
      <table class="table">
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:login_id)) %></th>
          <td><%= current_user.login_id %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:user_name)) %></th>
          <td><%= current_user.user_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:lesson_name)) %></th>
          <td>
            <% if current_user.lessons.any? %>
              <% current_user.lessons.each do |lesson| %>
                <%= lesson.lesson_name %><br>
              <% end %>
            <% else %>
              <%= '登録されていません' %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th scope="row"><%= t(User.human_attribute_name(:subject_name)) %></th>
          <td>
            <% if current_user.subjects.any? %>
              <% current_user.subjects.each do |subject| %>
                <%= subject.subject_name %><br>
              <% end %>
            <% else %>
              <%= '登録されていません' %>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
    </div>
  </div>
</div>